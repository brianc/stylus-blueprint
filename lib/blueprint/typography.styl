quote-color = #666

html
  font-size 100.01%

body
  font-size 75%
  color #222
  background #fff
  font-family "Helvetica Neue", Arial, Helvetica, sans-serif

header(size)
  font-weight normal
  color #111
  font-size size
  img
    margin 0

h1
  header 3em
  line-height 1
  margin-bottom 0.5em

h2
  header 2em
  margin-bottom 0.75em

h3
  header 1.5em
  line-height 1
  margin-bottom 1.25em

h4
  header 1.2em
  line-height 1.25
  margin-bottom 1.25em

h5
  header 1em
  font-weight bold
  margin-bottom 1.5em

h6
  header 1em
  font-weight bold

p
  margin 0 0 1.5em 0

//TODO: p.left p.right for image floating?

blockquote
  margin 1.5em
  color quote-color
  font-style italic

strong, dfn
  font-weight bold

em,dfn
  font-style italic

sup, sub
  line-height 0

abbr, acronym
  border-bottom 1px dotted quote-color

address
  margin 0 0 1.5em 0
  font-style italic

del
  color quote-color

pre
  margin 1.5em
  white-space pre

pre, code, tt
  font 1em 'andale mono', 'lucidia console', monospace
  line-height 1.5

li ul, li ol
  margin 0

ul
  list-style disc

ol
  list-style decimal

dl
  margin 0 0 1.5em 0

dl dt
  font-weight bold

dd
  margin-left 1.5em

table
  margin-bottom 1.4em
  width 100%

th
  font-weight bold

thead th
  background #c3d9ff

th, td, caption
  padding 4px 10px 4px 5px

tfoot
  font-style italic

caption
  background #eee

  
